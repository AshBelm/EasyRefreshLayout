<?xml version="1.0" encoding="utf-8"?>
<com.mcmo.easyrefreshlayout.library.EasyRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/easyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:headerDock="before"
    app:footerDock="before"
    app:footerSpringFixed="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mcmo.easyrefreshlayout.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="button"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</com.mcmo.easyrefreshlayout.library.EasyRefreshLayout>
