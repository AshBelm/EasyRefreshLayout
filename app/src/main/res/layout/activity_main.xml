<?xml version="1.0" encoding="utf-8"?>
<com.mcmo.easyrefreshlayout.library.EasyRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/easyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:headSpring="100dp"
    app:footSpring="50dp"
    app:headActivateDistance="100dp"
    app:footActivateDistance="100dp"
    android:background="#ffffff"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</com.mcmo.easyrefreshlayout.library.EasyRefreshLayout>
