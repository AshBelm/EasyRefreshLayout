            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:text="button"/>
        <TextView
            android:id="@+id/tv_click"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="click"
            />
