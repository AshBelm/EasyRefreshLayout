<?xml version="1.0" encoding="utf-8"?>
<com.mcmo.easyrefreshlayout.library.EasyRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/easyLayout"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:background="#ff00f0"
    android:paddingBottom="50dp"
    android:paddingLeft="20dp"
    android:paddingTop="40dp"
    app:footerSpringFixed="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"></android.support.v7.widget.RecyclerView>
</com.mcmo.easyrefreshlayout.library.EasyRefreshLayout>
